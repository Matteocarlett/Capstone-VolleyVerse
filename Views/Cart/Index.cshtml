@model List<VolleyVerse.Models.Cart>

<h2>Cart Items</h2>
@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Shop ID</th>
                <th>Item Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@cart.shop_id</td> 
                    <td>@cart.Shop.item_name</td>
                    <td>@cart.Shop.item_price</td>
                    <td>@cart.Shop.item_description</td>
                    <td><img src="@cart.Shop.item_photo" alt="Item Photo" style="width: 100px; height: 100px;" /></td>
                    <td>@cart.Shop.quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Cart is empty</p>
}

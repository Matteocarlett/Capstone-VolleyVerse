@model VolleyVerse.Models.Shop

<link href="~/Content/css/Shop.css" rel="stylesheet" />
@{
    ViewBag.Title = "Modifica Articolo";
}

<h2 class="text-center mt-3 text-light fs-1"><span class="title">@ViewBag.Title</span></h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.purchase_id)

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.item_name, "Nome Articolo", new { @class = "form-label" })
                            @Html.EditorFor(model => model.item_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.item_name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.item_description, "Descrizione", new { @class = "form-label" })
                            @Html.EditorFor(model => model.item_description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.item_description, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.item_price, "Prezzo", new { @class = "form-label" })
                            @Html.EditorFor(model => model.item_price, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.item_price, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.item_photo, "Foto dell'articolo", new { @class = "form-label" })
                            @Html.EditorFor(model => model.item_photo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.item_photo, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://www.modenavolley.it/wp/wp-content/uploads/2022/09/PALAZZETTO-11.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Light background with slight transparency */
    }
</style>

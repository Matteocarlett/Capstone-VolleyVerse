@model VolleyVerse.Models.Notizie

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Modifica Notizia";
}

<link href="~/Content/css/Shop.css" rel="stylesheet" />

<h2 class="text-center mt-3 text-light fs-1"><span class="title">@ViewBag.Title</span></h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "News", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.news_id)

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.title, "Titolo", new { @class = "form-label" })
                            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.content, "Contenuto", new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.content, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
                            @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.date_published, "Data di Pubblicazione", new { @class = "form-label" })
                            @Html.EditorFor(model => model.date_published, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.date_published, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.image_url, "URL Immagine", new { @class = "form-label" })
                            @Html.EditorFor(model => model.image_url, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.image_url, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.category, "Categoria", new { @class = "form-label" })
                            @Html.EditorFor(model => model.category, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://www.modenavolley.it/wp/wp-content/uploads/2022/09/PALAZZETTO-11.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Light background with slight transparency */
    }
</style>

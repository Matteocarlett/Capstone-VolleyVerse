@model List<VolleyVerse.Models.Classifica>
<link href="~/Content/css/Shop.css" rel="stylesheet" />
@{
    ViewBag.Title = "Classifica";
}

<link href="~/Content/css/TableStyle.css" rel="stylesheet" />

<div class="container">
    <h2 class="d-flex justify-content-center m-3"><span class="title fs-1">Classifica</span></h2>
    <table class="table table-striped">
        <thead>
            <tr>

                <th>Pos</th>
                <th></th>
                <th>Team</th>
                <th>Pts</th>
                <th>P</th>
                <th>W</th>
                <th>L</th>
            </tr>
        </thead>
        <tbody>
            @{
                int pos = 1;
            }
            @foreach (var item in Model.OrderByDescending(m => m.points))
            {
                <tr>

                    <td>@pos</td>
                    <td><img src="@item.Squadra.logo_url" alt="Logo" style="width:50px; height:50px;" /></td>
                    <td>@item.Squadra.team_name</td>
                    <td>@item.points</td>
                    <td>@item.games_played</td>
                    <td>@item.wins</td>
                    <td>@item.losses</td>
                </tr>
                pos++;
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .container {
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }
</style>